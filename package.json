    "start-app:dev": "set NUCLEUS_LISTENER_ENABLED=false&& set NUCLEUS_APP_ENABLED=true&& set PORT=3000 && nest start --watch",
    "start-listener:dev": "set NUCLEUS_LISTENER_ENABLED=true&& set NUCLEUS_APP_ENABLED=false&& set PORT=3001 && nest start --watch",
